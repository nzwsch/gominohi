<div class="container pt-3">
  <div class="row">
    <% @areas.each do |area| %>
      <div class="col-2 mb-5">

        <div class="area">
          <h3 class="mb-3"><%= area.name %></h3>
        </div>

        <div class="list-group">
          <% area.collection_areas.each do |collection_area| %>
            <%= link_to collection_date_path(collection_area), class: "list-group-item list-group-item-action" do %>
              <%= collection_area.name %>
            <% end %>
          <% end %>
        </div>

      </div>
    <% end %>
  </div>
</div>
